<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="PR1" Height="193.837" Width="267.589" ResizeMode="NoResize" Closing="Window_Closing">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10,10,4,8" Width="248" Height="147">
        <Label Content="Введите число" Margin="10,0,12,0" VerticalAlignment="Top" HorizontalAlignment="Center"/>
        <Line Height="5"></Line>
        <TextBox x:Name="input" Height="23" Margin="10,0,12,0" TextWrapping="Wrap" VerticalAlignment="Top" PreviewTextInput="Input_PreviewTextInput"/>
        <Line Height="5"></Line>
        <Button Content="OK" Margin="10,0,12,0" VerticalAlignment="Top" Height="26" Click="Button_Click"/>
        <Line Height="5"></Line>
        <Button x:Name="connect_btn" Content="Подключиться к серверу" Click="Button_Click_1" Margin="10,0,12,0" Background="#FF70E257"/>
        <Button x:Name="disconnect_btn" Content="Отключиться" Click="Button_Click_2" Margin="10,0,12,0" Background="#FFF74D4D"/>

    </StackPanel>
</Window>
